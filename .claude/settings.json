{
  "$schema": "https://claude.ai/schemas/settings.json",
  "mcpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-server-chrome-devtools",
        "--headless",
        "--isolated"
      ]
    },
    "pylsp": {
      "command": "pylsp",
      "args": [],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  },
  "permissions": {
    "allow": [
      "Bash(pytest*)",
      "Bash(ruff*)",
      "Bash(mypy*)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(docker compose*)",
      "Bash(uv pip*)"
    ]
  }
}
